@page
@model IndexModel

<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Book List</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info form-control text-white">Create New Book</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Books.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Books.FirstOrDefault().Name"></label> <!--Tag helper format-->
                        </th>
                        <th>
                            <label asp-for="Books.FirstOrDefault().Author"></label> <!--Tag helper format-->
                            @*@Html.DisplayNameFor(m => m.Books.FirstOrDefault().Author)*@ <!--HTML helper format-->
                        </th>
                        <th>
                            <label asp-for="Books.FirstOrDefault().ISBN"></label> <!--Tag helper format-->
                        </th>
                        <th>
                            @foreach (var item in Model.Books)
                            {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Name) <!--HTML helper format-->
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Author) <!--HTML helper format-->
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.ISBN) <!--HTML helper format-->
                        </td>
                        <td>
                            <button asp-page-handler="Delete" asp-rout-id="@item.Id" onclick="return confirm('Are you sure you want to delete this?')" class="btn btn-danger btn-sm">Delete</button>
                            <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm">Edit</a>
                            <!-- asp-route-id will route to the specified page(Edit) and pass the item ID as a parameter-->
                        </td>
                    </tr>
                    }
                        </table>
                    }
                    else
                    {
                        <p>No books available.</p>
                    }
        </form>
    </div>
</div>